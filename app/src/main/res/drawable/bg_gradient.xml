<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#C9FADB"
        android:endColor="#B0DBEC"
        android:angle="0"/> <!-- 0 = left to right, 90 = top to bottom -->

    <!-- Rounded corners (pill shape) -->
    <corners android:radius="30dp" />

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
